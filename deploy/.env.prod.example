# Database (POSTGRES_PASSWORD is used by the Postgres container, DB_PASSWORD by Spring Boot)
DB_PASSWORD=CHANGE_ME_strong_password_here
POSTGRES_PASSWORD=CHANGE_ME_strong_password_here

# JWT — generate with: openssl rand -base64 48
JWT_SECRET=CHANGE_ME_jwt_secret_min_256_bits

# Webhook — shared secret between Cloudflare email worker and backend
WEBHOOK_SECRET=CHANGE_ME_webhook_secret

# CORS and frontend URL
CORS_ORIGINS=https://hellohelloapp.co
APP_FRONTEND_URL=https://hellohelloapp.co

# Storage — S3
STORAGE_TYPE=s3
S3_BUCKET=thisisme-uploads
S3_REGION=eu-west-2
S3_ACCESS_KEY=CHANGE_ME
S3_SECRET_KEY=CHANGE_ME

# Email (SMTP)
SPRING_MAIL_HOST=smtp.example.com
SPRING_MAIL_PORT=587
SPRING_MAIL_USERNAME=CHANGE_ME
SPRING_MAIL_PASSWORD=CHANGE_ME
APP_EMAIL_FROM=noreply@hellohelloapp.co
APP_EMAIL_FROM_NAME=HelloHello
